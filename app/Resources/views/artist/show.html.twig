{% extends 'base.html.twig' %}

{% block body %}
    <h1>Artist</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ artist.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ artist.lastname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{% if artist.birthDate %}{{ artist.birthDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ artist.country }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('artist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('artist_edit', { 'id': artist.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
