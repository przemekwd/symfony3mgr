{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        <i class="material-icons" style="font-size:38px;">account_box</i>
        <span>{{ 'album.edit'|trans({}, 'AppBundle') }}</span>
    </h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
    {{ form_end(edit_form) }}

    <div class="pull-right col-md-1">
        {{ form_start(delete_form) }}
        {{ form_end(delete_form) }}
    </div>

    <a href="{{ path('album_index') }}" class="btn btn-default" role="button" aria-label="Left Align">
        <span class="material-icons">undo</span>
        {{ 'buttons.back'|trans({}, 'AppBundle') }}
    </a>
    {% block javascript %}
        <script src="http://code.jquery.com/jquery-3.2.1.js"
                integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>
        <script>
            $(document).ready(function() {
                $('.genres').selectpicker();
                $('.mediums').selectpicker();
                $('.release').datepicker({
                    format: 'yyyy-mm-dd',
                    todayHighlight: true,
                    autoclose: true,
                });
            });
        </script>
    {% endblock %}
{% endblock %}
